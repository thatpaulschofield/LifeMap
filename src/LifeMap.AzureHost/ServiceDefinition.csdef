<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="AzureHost" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="LifeMap.Web" vmsize="Small">
    <Sites>
      <Site name="Web">
        <VirtualApplication name="Membership" physicalDirectory="C:\projects\LifeMap\src\MembershipBC\app\LifeMap.Membership.Rest\" />
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WebRole>
  <WorkerRole name="LifeMap.Membership.MessageHandlers" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="AzureQueueConfig.ConnectionString" />
      <Setting name="AzureProfileConfig.Profiles" />
      <Setting name="Diagnostics.ConnectionString" />
      <Setting name="AzureSubscriptionStorageConfig.ConnectionString" />
      <Setting name="Diagnostics.Level" />
      <Setting name="UnicastBusConfig.LocalAddress" />
      <Setting name="MessageForwardingInCaseOfFaultConfig.ErrorQueue" />
      <Setting name="AzureQueueConfig.QueueName" />
      <Setting name="MsmqTransportConfig.NumberOfWorkerThreads" />
      <Setting name="MsmqTransportConfig.MaxRetries" />
    </ConfigurationSettings>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WorkerRole>
  <WorkerRole name="LifeMap.EmailGateway" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="AzureQueueConfig.ConnectionString" />
      <Setting name="AzureProfileConfig.Profiles" />
      <Setting name="Diagnostics.ConnectionString" />
      <Setting name="AzureSubscriptionStorageConfig.ConnectionString" />
      <Setting name="Diagnostics.Level" />
      <Setting name="UnicastBusConfig.LocalAddress" />
      <Setting name="MessageForwardingInCaseOfFaultConfig.ErrorQueue" />
      <Setting name="AzureQueueConfig.QueueName" />
      <Setting name="MsmqTransportConfig.NumberOfWorkerThreads" />
      <Setting name="MsmqTransportConfig.MaxRetries" />
    </ConfigurationSettings>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WorkerRole>
  <WorkerRole name="LifeMap.Membership.ViewModels.MessageHandlers" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="AzureQueueConfig.ConnectionString" />
      <Setting name="AzureProfileConfig.Profiles" />
      <Setting name="Diagnostics.ConnectionString" />
      <Setting name="AzureSubscriptionStorageConfig.ConnectionString" />
      <Setting name="Diagnostics.Level" />
      <Setting name="UnicastBusConfig.LocalAddress" />
      <Setting name="MessageForwardingInCaseOfFaultConfig.ErrorQueue" />
      <Setting name="AzureQueueConfig.QueueName" />
      <Setting name="MsmqTransportConfig.NumberOfWorkerThreads" />
      <Setting name="MsmqTransportConfig.MaxRetries" />
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>