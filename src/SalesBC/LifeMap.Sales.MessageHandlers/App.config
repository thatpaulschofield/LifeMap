<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="MsmqTransportConfig" type="NServiceBus.Config.MsmqTransportConfig, NServiceBus.Core"/>
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core"/>
  </configSections>
  <connectionStrings>
    <add name="SalesEventStore" connectionString="Url = http://localhost:8080/databases/Sales"/>
  </connectionStrings>
  <MsmqTransportConfig
                       InputQueue="salesEndpoint"
                       ErrorQueue="salesEndpointError"
                       NumberOfWorkerThreads="1"
                       MaxRetries="5"/>
  <UnicastBusConfig>
    <!--DistributorControlAddress="" DistributorDataAddress="" ForwardReceivedMessagesTo="">-->
    <MessageEndpointMappings>
      <add Messages="LifeMap.Sales.Commands" Endpoint="salesEndpoint" />
      <add Messages="LifeMap.Sales.Events" Endpoint="salesEndpoint" />
    </MessageEndpointMappings>
  </UnicastBusConfig>
  
  <appSettings>
    <add key="EndpointConfigurationType" value="LifeMap.Sales.MessageHandlers.EndpointConfig, LifeMap.Sales.MessageHandlers"/>
  </appSettings>
</configuration>