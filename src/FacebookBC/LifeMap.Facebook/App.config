<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="Logging" type="NServiceBus.Config.Logging, NServiceBus.Core" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
    <section name="MsmqTransportConfig" type="NServiceBus.Config.MsmqTransportConfig, NServiceBus.Core"/>
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core"/>
    <!--<section name="MsmqSubscriptionStorageConfig" type="NServiceBus.Config.MsmqSubscriptionStorageConfig, NServiceBus.Core" />-->
    <section name="MessageForwardingInCaseOfFaultConfig" type="NServiceBus.Config.MessageForwardingInCaseOfFaultConfig, NServiceBus.Core" />
    <section name="facebookSettings" type="Facebook.FacebookConfigurationSection, Facebook" />
  </configSections>
  
  <Logging Threshold="WARN" />
  
  <connectionStrings>
    <add name="FacebookEventStore" connectionString="Url = http://localhost:8080/databases/Facebook"/>
  </connectionStrings>
  
  <MsmqTransportConfig InputQueue="facebookEndpoint" ErrorQueue="facebookErrorEndpoint" NumberOfWorkerThreads="1" MaxRetries="5"/>
  
  <MessageForwardingInCaseOfFaultConfig ErrorQueue="facebookEndpointError"/>
  
  <UnicastBusConfig >
    <MessageEndpointMappings>
        <add Messages="LifeMap.Facebook" Endpoint="facebookEndpoint" />
      <add Messages="LifeMap.Facebook.Authentication" Endpoint="facebookEndpoint" />
    </MessageEndpointMappings>
  </UnicastBusConfig>

  <!--<MsmqSubscriptionStorageConfig Queue="membershipSubscriptionStorage" />-->
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <log4net debug="false">
    <appender name="console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n"/>
      </layout>
    </appender>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="FacebookHostService.Log.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="console"/>
      <appender-ref ref="FileAppender"/>
    </root>
  </log4net>
  <facebookSettings appId="149734561800297" appSecret="539e2c71bb22c60a13c7971714d91639" />
</configuration>